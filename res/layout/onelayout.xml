<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/baiban"
        >



    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="30dp"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/menu_hudongtiandi"
                       android:layout_weight="1"
                       android:id="@+id/hudongtiandi"
                       android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/chengzhangjilu"
                       android:src="@drawable/menu_chengzhangjilu"
                       android:layout_height="wrap_content"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/notice"
                       android:src="@drawable/menu_banjixiangce"
                       android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="家校互动"
                      android:gravity="center"
                      android:textSize="16sp"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="成长记录"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="公告栏"
                      android:gravity="center"
                      android:textColor="#000000"
                      android:textSize="16sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/yuyingxunxi"
                       android:src="@drawable/menu_cartongzhi"
                       android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/menu_tongxunlu"
                       android:layout_weight="1"
                       android:id="@+id/book"
                       android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/about"
                       android:src="@drawable/menu_yuying"
                       android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="育儿天地"
                      android:gravity="center"
                      android:textSize="16sp"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="图书借阅"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="园区介绍"
                      android:gravity="center"
                      android:textColor="#000000"
                      android:textSize="16sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="10dp"
                      android:gravity="center"
                      android:layout_height="wrap_content">

            <ImageButton android:layout_width="wrap_content"
                         android:background="@drawable/selected"
                         android:layout_gravity="center"
                         android:layout_height="wrap_content"/>
            <ImageButton android:layout_width="wrap_content"
                      android:layout_marginLeft="10dp"
                         android:background="@drawable/unselected"
                         android:layout_height="wrap_content"/>
            <!--<ImageButton android:layout_width="wrap_content"-->
                         <!--android:layout_marginLeft="10dp"-->
                         <!--android:background="@drawable/unselected"-->
                         <!--android:layout_height="wrap_content"/>-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/lp_01"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            >
        <ImageView android:layout_width="match_parent"
                   android:src="@drawable/ic_launcher"
                   android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请选择你的身份"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:id="@+id/title"
                />
    </LinearLayout>
<LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">
    <LinearLayout
            android:id="@+id/father_linear"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/txhc"
                android:id="@+id/identity_father"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        <TextView
                android:id="@+id/identity_father_name"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:text="宝宝爸"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/mother_linear"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/txhc"
                android:id="@+id/identity_mother"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        <TextView
                android:id="@+id/identity_mother_name"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:text="宝宝妈"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/datetime"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
    	<TextView 
        	  android:id="@+id/pre_login_time"
        	  android:layout_width="match_parent"
              android:textColor="@color/blue"
              android:textStyle="bold"
              android:text="上一次登入日期：2014-05-20 10:00"
              android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
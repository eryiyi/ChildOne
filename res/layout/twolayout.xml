<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/baiban"
        >



    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="30dp"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/menu_school"
                       android:src="@drawable/menu_school"
                       android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/menu_class"
                       android:layout_weight="1"
                       android:id="@+id/menu_class"
                       android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/menu_zuoye"
                       android:src="@drawable/menu_zuoye"
                       android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="校园公告"
                      android:gravity="center"
                      android:textSize="16sp"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="班级公告"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="作业布置"
                      android:gravity="center"
                      android:textColor="#000000"
                      android:textSize="16sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/menu_shipu"
                       android:src="@drawable/menu_shipu"
                       android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/menu_jiaqi"
                       android:layout_weight="1"
                       android:id="@+id/menu_jiaqi"
                       android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/menu_guanhuai"
                       android:src="@drawable/menu_guanhuai"
                       android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="5dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="每周食谱"
                      android:gravity="center"
                      android:textSize="16sp"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="请假管理"
                      android:textSize="16sp"
                      android:gravity="center"
                      android:textColor="#000000"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:text="健康关怀"
                      android:gravity="center"
                      android:textColor="#000000"
                      android:textSize="16sp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="10dp"
                      android:gravity="center"
                      android:layout_height="wrap_content">

            <ImageButton android:layout_width="wrap_content"
                         android:background="@drawable/unselected"
                         android:layout_gravity="center"
                         android:layout_height="wrap_content"/>
            <ImageButton android:layout_width="wrap_content"
                         android:layout_marginLeft="10dp"
                         android:background="@drawable/selected"
                         android:layout_height="wrap_content"/>
            <ImageButton android:layout_width="wrap_content"
                         android:background="@drawable/unselected"
                         android:layout_gravity="center"
                         android:layout_marginLeft="10dp"
                         android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>